-- compare field of 2 tables
comp=(k)->(a,b)->a[k]<b[k]

-- true if object inherits from type
istype=(o,t)->
	c=o.__class
	while c != nil
		if c == t
			return true
		c=c.__parent
	false

class Mtrx3x3
	new:(m={ 1,0,0, 0,1,0, 0,0,1 })=>
		@m=m
	_index:(r,c)=>r*3+c+1
	get:(r,c)=>
		-- adjust for 1 indexed arrays
		assert r*c <= #@m and r*c >= 0
		@m[@_index(r,c)]
	set:(r,c,v)=>
		assert r*c <= #@m and r*c >= 0
		@m[@_index(r,c)]=v
	_apply:(o,f)=>
		{ a,b,c, d,e,f, g,h,i }=@m
		if "number"== type o
			Mtrx3x3 {
				f(a,o),f(b,o),f(c,o),
				f(d,o),f(e,o),f(f,o),
				f(g,o),f(h,o),f(i,o),
			}
		else
			assert istype o,Mtrx3x3
			{ j,k,l, m,n,o, p,q,r }=o.m
			Mtrx3x3 {
				f(a,j),f(b,k),f(c,l),
				f(d,m),f(e,n),f(f,o),
				f(g,p),f(h,q),f(i,r),
			}
	__add:(o)=>@_apply o,(a,b)->a+b
	__sub:(o)=>@_apply o,(a,b)->a-b
	__mul:(o)=>@_apply o,(a,b)->a*b
	__mul:(o)=>
	__div:(o)=>@_apply o,(a,b)->a/b
	__idiv:(o)=>@_apply o,(a,b)->a//b
	-- computes dot product
	__concat:(o)=>
		assert istype o,Mtrx3x3
		{ a,b,c, d,e,f, g,h,i }=@m
		{ j,k,l, m,n,o, p,q,r }=o.m
		Mtrx3x3 {
			a*j+b*m+c*p,a*k+b*n+c*q,a*l+b*o+c*r,
			d*j+e*m+f*p,d*k+e*n+f*q,d*l+e*o+f*r,
			g*j+h*m+i*p,g*k+h*n+i*q,g*l+h*o+i*r,
		}
	__tostring:=>
		{ a,b,c, d,e,f, g,h,i }=@m
		"[#{a},#{b},#{c},#{d},#{e},#{f},#{g},#{h},#{i}]"

class Transform
	new:=>
		@s=Mtrx3x3!
		@r=Mtrx3x3!
		@t=Mtrx3x3!
	__len:=>#@s+#@r+#@t
	translate:(x=0,y=0)=>
		@t*=Mtrx3x3 {
			1,0,x,
			0,1,y,
			0,0,1,
		}
	scale:(w=1,h=1)=>
		@s*=Mtrx3x3 {
			w,0,0,
			0,h,0,
			0,0,1,
		}
	reflect:=>@scale -1,-1
	reflect_x:=>@scale 1,-1
	reflect_y:=>@scale -1,1
	shear:(x=0,y=0)=>
		@s*=Mtrx3x3 {
			1,x,0,
			y,1,0,
			0,0,1,
		}
	rotate:(ang=0)=>
		ang=math.rad ang
		c,s=math.cos(ang),math.sin ang
		@r*=Mtrx3x3 {
			c,-s,0,
			s, c,0,
			0, 0,1,
		}
	rotate_around_axis:(ang=0,x=0,y=0)=>
		@t*=@translate(-x,-y) *
			@rotate(ang) *
			@translate(x,y)
	apply:(m)=>@s*@r*@t*m

class Vec2
	new:(x=0,y=0)=>
		@x=x
		@y=y
	to_mtrx:=>Mtrx3x3 {
			x,0,0,
			y,0,0,
			1,0,0,
		}
	_from:(m)->
		assert istype m,Mtrx3x3
		Vec2 m\get(0,0),m\get(1,0)
	__add:(v)=>@_apply v,(a,b)->a+b
	__sub:(v)=>@_apply v,(a,b)->a-b
	__mul:(v)=>@_apply v,(a,b)->a*b
	__div:(v)=>@_apply v,(a,b)->a/b
	__idiv:(v)=>@_apply v,(a,b)->a//b
	_apply:(v,f)=>
		if "number"== type v
			Vec2 f(@x,v),f(@y,v)
		else if istype v,Vec2
			Vec2 f(@x,v.x),f(@y,v.y)
	-- computes dot product
	__concat:(v)=>
		assert istype v,Vec2
		@_from @to_mtrx! .. v.to_mtrx!
	__tostring:=>"[#{@x}, #{@y}]"
	lensq:=>@x*@x+@y*@y
	__len:=>
		if @x == 0 or @y == 0
			0
		else
			math.sqrt @lensq!
	clamp:(min,max)=>
		Vec2 math.min(math.max(@x,min.x),max.x),
			math.min(math.max(@y,min.y),max.y)
	distance:(v)=>
		dx,dy=@x-v.x,@y-v.y
		math.abs math.sqrt(dx*dx+dy*dy)
	normalize:()=> Vec2 @x/#@,@y/#@

class Behavior
	new:(o={})=>
		@order=o.order or 0
	update:(game,entity)=>

class Player extends Behavior
	new:(o={})=>
		super o
	update:(game,entity)=>
		if btn 0
			entity.y-=1
		if btn 1
			entity.y+=1
		if btn 2
			entity.x-=1
		if btn 3
			entity.x+=1

class Ouch extends Behavior
	new:(o={})=>
		super o
	update:(game,entity)=>
		if btn 7
			game.camera.shake=true
			game.shake=2

class FlipX extends Behavior
	new:(o={})=>
		super o
	update:(game,entity)=>
		if btn 2
			entity.flip=0
		if btn 3
			entity.flip=1

class Entity
	new:(o={})=>
		@x=o.x or 0
		@y=o.y or 0
		@sprite=o.sprite or SpriteSet!
		@behaviors=o.behaviors or {}
		for b in *@behaviors
			assert istype b,Behavior
	update:(game,parent)=>
		table.sort @behaviors,comp("order")
		for b in *@behaviors
			b\update game,@
	draw:(game,parent)=>
		@sprite\draw game,@

class Sprite
	new:(o={})=>
		@pos=Vec2 o.x,o.y
		@sprite_id=o.sprite_id or 1
		@colorkey=o.colorkey or -1
		@flip=0
	draw:(game,parent)=>
		x=if parent
			parent.pos.x + @pos.x
		else
			 @pos.x
		y=if parent
			parent.pos.y + @pos.y
		else
			 @pos.y
		spr @sprite_id,
			x,y,
			@colorkey,
			1,@flip,0,2,2
		--trace "x:#{x} y:#{y}"
		print "x:#{x} y:#{y} flip:#{@flip}",x,y-8,3

class SpriteSet
	new:(o={})=>
		@pos=Vec2 o.x,o.y
		@children=o.children or {}
		for e in *@children
			assert istype e,Sprite
	update:(game,parent)=>
		for e in *@children
			e\update game,@
	draw:(game,parent)=>
		for e in *@children
			e\draw game,{
				pos:Vec2 parent.x,parent.y
			}

class Game
	new:(o={})=>
		@t=0
		@entities=o.entities or {}
		@camera=o.camera or {}
		@shake=0
	update:=>
		@t+=1
		for e in *@entities
			e\update @
	draw:=>
		cls 13
		map!
		for e in *@entities
			e\draw @
		@camera_shake!
	camera_shake:=>
		if @camera.shake
			if @shake>0
				d=1
				poke 0x3FF9,math.random(-d,d)
				poke 0x3FF9+1,math.random(-d,d)
				@shake-=1
				if @shake==0
					memset 0x3FF9,0,2
					@camera.shake=false

